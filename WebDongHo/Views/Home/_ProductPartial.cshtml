<div class="panel panel-info panel-prod">
 <div class="panel-heading panel-heading-prod"><i class="fa fa-spinner faspin"></i> Sản phẩm thời trang nam</div>
 <div class="panel-body">
 <div class="row">
 @foreach (var item in Model.CatProds)
 {       <div class="col-md-4">

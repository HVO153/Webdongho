@model WebDongHo.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container">
    <h1>Quản lý sản phẩm</h1>
    <a href="@Url.Action("Create")" class="btn btn-success">Thêm sản phẩm mới</a>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Prods)
            {
                <tr>
                    <td>@product.IdPro</td>
                    <td>@product.NamePro</td>
                    <td>@string.Format("{0:N0}", product.Price) VNĐ</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = product.IdPro })" class="btn btn-warning">Sửa</a>
                        <a href="@Url.Action("Delete", new { id = product.IdPro })" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?')">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




@foreach (var item in Model.Prods)
{
    <div class="product-detail">
        <div class="container">
            <div class="row">
                <!-- Sản phẩm chính -->
                <div class="col-lg-9">
                    <div class="row align-items-center product-detail-top">
                        <!-- Ảnh sản phẩm chính -->
                        <div class="col-md-4">
                            <div id="productCarousel" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img id="productImage" src="~/images/products/@item.Img1" class="d-block w-100" alt="Product Image">
                                    </div>
                                    <div class="carousel-item">
                                        <img id="productImage" src="~/images/products/@item.Img2" class="d-block w-100" alt="Product Image">
                                    </div>
                                    <div class="carousel-item">
                                        <img id="productImage" src="~/images/products/@item.Img3" class="d-block w-100" alt="Product Image">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#productCarousel" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#productCarousel" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>

                       


                        <!-- Nội dung sản phẩm -->
                        <div class="col-md-6">
                            <div class="product-content">
                                <div class="title">
                                    <h2>@item.NamePro</h2>
                                </div>
                                <div class="ratting">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <i class="fa fa-star"></i>
                                    }
                                </div>
                                <div class="price">
                                    Giá: @string.Format("{0:N0}", (float)item.Price) VNĐ
                                   
                                </div>

                                <!-- Form chọn kích cỡ, màu và số lượng -->
                                <div class="quantity">
                                    <h4>Các lựa chọn hiện có:</h4>
                                    <form class="form-horizontal">
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Kích cỡ:</label>
                                            <div class="col-md-8">
                                                <select class="form-control">


                                                    <option>35mm</option>
                                                    <option>40mm</option>
                                                    


                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-4 control-label">Màu:</label>
                                            <div class="col-md-8">
                                                <select class="form-control">
                                                    <option>Trắng </option>
                                                    <option>Đen</option>
                                                   
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-7 col-md-8">
                                                <a class="action btn-size" href="/them-gio-hang?ProductId=@item.IdPro&Quantity=1">
                                                    <i class="fa fa-cart-plus"></i> Mua ngay
                                                </a>
                                            </div>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thông tin chi tiết (Tabs) -->
                    <div class="row product-detail-bottom">
                        <div class="col-lg-12">
                            <ul class="nav nav-pills nav-justified">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="pill" href="#description">Description</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#specification">Specification</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="pill" href="#reviews">Reviews (1)</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <!-- Tab Description -->
                                <div id="description" class="container tab-pane active">
                                    <br>
                                   
                                    <p style="text-align: justify;">
                                        @Html.Raw(item.Detail)
                                    </p>
                                </div>

                                <!-- Tab Specification -->
                                <div id="specification" class="container tab-pane fade">
                                    <br>
                                   
                                    <ul>
                                        
                                    </ul>
                                </div>

                                <!-- Tab Reviews -->
                                <div id="reviews" class="container tab-pane fade">
                                    <br>
                                  
                                    <div class="reviews-submit">
                                        <h4>Give your Review:</h4>
                                        <div class="ratting">
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </div>
                                        <div class="row form">
                                            <div class="col-sm-6">
                                                <input type="text" placeholder="Name">
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="email" placeholder="Email">
                                            </div>
                                            <div class="col-sm-12">
                                                <textarea placeholder="Review"></textarea>
                                            </div>
                                            <div class="col-sm-12">
                                                <button>Submit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sidebar (có thể bỏ qua hoặc tùy chỉnh) -->
                <div class="col-lg-3">
                    <div class="sidebar-widget category">
                        <h2 class="title">Category</h2>
                        <ul>
                            <li><a href="#">Đồng hồ nam</a><span>(83)</span></li>
                            <li><a href="#">Đồng hồ nữ</a><span>(198)</span></li>
                            <li><a href="#">Đồng hồ thông minh</a><span>(95)</span></li>
                            <li><a href="#">Đồng hồ dây da</a><span>(48)</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section scripts {
    <script>
        function changeImage(img) {
            var mainImage = document.getElementById('mainImage');
            var tempSrc = mainImage.src;
            mainImage.src = img.src;
            img.src = tempSrc;
        }
    </script>
}

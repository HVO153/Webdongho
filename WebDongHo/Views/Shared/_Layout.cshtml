<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHIRT STORE</title>
    <meta name="keywords" content="your_keyworks" />
    <meta name="description" content="Website thời trang nam - SHIRT STORE" />
    <meta name="copyright" content="SHIRT STORE" />
    <meta name="author" content="SHIRT STORE" />
    <link rel="shortcut icon" href="~/images/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css" />
   
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <a href="trang-chu">
                    <img src="~/images/LogoTS.png" alt="SHIRT STORE">
                </a>
            </div>
            <div class="container">
                @await Html.PartialAsync("_MenuPartial")
            </div>
        </div>
    </div>
    <div class="content">
        <div class="container">
            <div >
                @RenderBody()
            </div>
         
        </div>
    </div>
    <div class="footer">
        <div class="container container-footer">
            <div class="col-md-8">
                <h4>SHIRT STORE - Cửa hàng thời trang nam</h4>
                <p>
                    Địa chỉ:Khu CNC, Phường Hiệp Phú, Tp. Thử Đức,
                    Tp. Hồ chí Minh
                </p>
                <p>
                    SĐT: <a class="info" href="tel:0868895261">086.8895.261</a> (Long
                    Nguyễn)
                </p>
                <p>
                    Email: <a class="info" href="mailto:
                                LongShirt@gmail.com">LongShirt@gmail.com</a>
                </p>
            </div>
            <div class="col-md-4">
                <img src="~/images/LogoTS.png" alt="logo" />
                <p></p>
                <p>Số lượng truy cập hiện tại: 600</p>
            </div>
        </div>
    </div>
    <div id="modalSignup" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Đăng ký</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" class="form-control" id="username"
                                   placeholder="Nhập username" required>
                        </div>
                        <div class="form-group">
                            <label for="fullname">Họ tên:</label>
                            <input type="text" class="form-control" id="fullname"
                                   placeholder="Nhập họ tên" required>
                        </div>
                        <div class="form-group">
                            <label for="address">Địa chỉ:</label>
                            <input type="text" class="form-control" id="address"
                                   placeholder="Nhập địa chỉ">
                        </div>
                        <div class="form-group">
                            <label for="phone">Số điện thoại:</label>
                            <input type="tel" class="form-control" id="phone" placeholder="Nhập số điện thoại">
                        </div>
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email"
                                   placeholder="Nhập email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu:</label>
                            <input type="password" class="form-control" id="password"
                                   placeholder="Nhập mật khẩu" required>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Nhập lại mật khẩu:</label>
                            <input type="password" class="form-control" id="confirmPassword"
                                   placeholder="Nhập lại mật khẩu" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="modalLogin" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Đăng nhập</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="username">Username:</label>
                            <input type="text" class="form-control" id="username"
                                   placeholder="Nhập username" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Mật khẩu:</label>
                            <input type="password" class="form-control" id="password"
                                   placeholder="Nhập mật khẩu" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
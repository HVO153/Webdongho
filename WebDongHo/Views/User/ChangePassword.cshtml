@model WebDongHo.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container mt-4">
    <h2 class="text-center">Đổi mật khẩu</h2>
    <hr />

    <!-- Hiển thị thông báo thành công hoặc lỗi -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="ChangePassword" asp-controller="User" method="POST">
        <input type="hidden" name="Register.IdUsers" value="@Model.Register.IdUsers" />
        <div class="form-group">
            <label for="newPassword">Mật khẩu mới</label>
            <input type="password" class="form-control" id="newPassword" name="Register.Password" placeholder="Nhập mật khẩu mới" required />
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật mật khẩu</button>
    </form>
</div>
